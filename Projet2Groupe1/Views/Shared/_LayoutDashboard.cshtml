<!DOCTYPE html>

<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
</head>

<body>
    <header id="mainHeader">
        <a href="index.html">
            <img src="~/images/logoSoundTogetherH.svg" alt="Logo de la plateforme" id="logo">
        </a>
        <nav id="mainNav">
            <ul>
                <li><a href=#>Catalogue</a></li>
                <li><a href=# class="buttonNav">Espace personnel</a></li>
                <li><a href=# class="buttonNav"><img src="~/images/iconeDeconnexion.png" alt="Icone déconnexion" id="iconeNav"></a></li>
            </ul>
        </nav>
    </header><!--Ici se termine le mainHeader-->

    <section id="pageContent" class="bigScreen">

        <aside id="leftCol">
            <nav id="dashNav">
                <ul>
                    <li><a href=# class="buttonProfile"><img src="~/images/iconeEuro.png" alt="Icone Euro" class="icone">Historique d'achat</a></li>
                    <li><a href=# class="buttonProfile"><img src="~/images/iconeGroupe.png" alt="Icone Groupe" class="icone">Groupe de discussion</a></li>
                    <li><a href=# class="buttonProfile"><img src="~/images/iconeMessage.png" alt="Icone Message" class="icone">Messagerie privée</a></li>
                    <li><a href=# class="buttonProfile"><img src="~/images/iconeOrganiser.png" alt="Icone Organiser" class="icone">Organiser session jam</a></li>
                    <li><a href=# class="buttonProfile"><img src="~/images/iconeMusic.png" alt="Icone Music" class="icone">Participer session jam</a></li>
                    <li><a href=# class="buttonProfile"><img src="~/images/iconeProfil.png" alt="Icone Profil" class="icone">Profil</a></li>
                </ul>
            </nav>
        </aside><!--Ici se termine leftCol-->

        <main id="rightCol">
            @RenderBody()
        </main> <!--Ici se termine rightCol-->

    </section> <!--Ici se termine le pageContent-->

    <footer id="mainFooter">
        <div id="footer">
            <ul>
                <li><a href=#>Mentions légales</a></li>
                <li>SOUND TOGETHER &copy; 2024</li>
                <li><a href=#>Contact</a></li>
            </ul>
        </div>
    </footer> <!--Ici se termine le mainFooter-->

</body> <!--Ici se termine la page-->

</html>